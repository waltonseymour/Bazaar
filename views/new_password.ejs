  <body>
    <input type="hidden" id="user-id" value="<%=userID%>"></input>
    <div class="container">
      <div class="row">
        <div class="settings-panel col-md-6 col-md-offset-3 panel panel-success">
          <div class="panel-heading">
            Account Recovery
          </div>
          <div class="panel-body">
            <form class="col-md-10 col-md-offset-1" id='new-password-form'>
              <input type='password' id='new-password' class='form-control'
              placeholder="Password" required data-parsley-minlength="6"
              data-parsley-required-message="Looks like you forgot to fill this out">
              <input type='password' id='confirm-new-password' class='form-control'
              placeholder="Confirm Password" required data-parsley-minlength="6"
              data-parsley-required-message="Looks like you forgot to fill this out" data-parsley-equalto="#new-password">
              <button type="submit" class='btn btn-primary form-control' style="margin-top: 10px;">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
