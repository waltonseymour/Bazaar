<% if (posts.length == 0) { %>
  <div class="row bg-danger">
    <div class="col-sm-12 no-posts-warning">
      <i class="fa fa-exclamation-circle"></i> No posts found
    </div>
  </div>
<% } %>
<% for (var i = 0; i < posts.length; i++) {  %>
  <div class="row post" data-id="<%= posts[i].id %>"
    <% if (posts[i].photos[0]){ %>
      data-photo="<%= posts[i].photos[0].id %>"
    <% } %>
  >
    <div class="col-sm-10">
      <h3 class="post-title truncate">
        <%= posts[i].title%>
      </h3>
      <div class="row">
        <div class="col-sm-10">
          <h5 class="post-description truncate">
            <%= posts[i].description%>
          </h5>
          <button class="btn btn-info btn-xs category-tag" value='<%= posts[i].category.id%>'>
            <%= posts[i].category.name%>
          </button>
          <% if (posts[i].photos[0]){ %>
            <button class="btn btn-info btn-xs photo-tag" value='<%= posts[i].category.id%>'>
              <i class="fa fa-camera"></i>
            </button>
          <% } %>
        </div>
      </div>
    </div>
    <div class="col-sm-2">
      <div class="row">
        <%
        var priceStr;
        if (posts[i].price > 1000){
          priceStr = numeral(posts[i].price).format('$0a').toUpperCase();
        }
        else if (posts[i].price > 0){
          priceStr = '$' + posts[i].price;
        }
        else{
          priceStr = "Free";
        }
        %>
        <div class="bg-success price"><h4><%= priceStr %></h4></div>
      </div>
      <div class="row post-time">
        <h6><%= moment(posts[i].createdAt).fromNow() %></h6>
      </div>
    </div>
  </div>
  <hr class="end-post row">
<% } %>
