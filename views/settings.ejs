  <body>
    <input type="hidden" id="user-id" value="<%=userID%>"></input>
    <div class="container">
      <div class="row">
        <div class="col-xs-12 navbar-container">
          <nav class="navbar navbar-default" role="navigation">
            <a class="navbar-brand" href="/">Bazaar</a>
            <div class="">
              <ul class="nav navbar-nav navbar-right mynavbar">
                <li>
                  <a href="#" id="create" data-toggle="modal" data-target="#create-modal"><i class="fa fa-plus-circle fa-lg"></i></a>
                </li>
                <li>
                  <a href="#" id="settings" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog fa-lg"></i></a>
                  <ul class="dropdown-menu" id="settings-dropdown-menu">
                    <li><a href="#">Settings</a></li>
                    <li><a href="#" id="logout">Log out</a></li>
                  </ul>
                </li>
               </ul>
               <form class="navbar-form navbar-right navbar-search" action="#" role="search">
                <div class="form-group">
                  <div class="input-group">
                    <input class="form-control" type="search" placeholder="Search">
                    <span class="input-group-btn">
                      <button type="submit" class="btn btn-success"><i class="fa fa-search"></i></button>
                    </span>
                  </div>
                </div>
              </form>
            </div><!-- /.navbar-collapse -->
          </nav><!-- /navbar -->
        </div>
      </div>

      <!-- Create Modal -->
      <div class="modal fade" id="create-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <h4 class="modal-title" id="myModalLabel">Create a Post</h4>
            </div>
            <form id="create-form">
              <div class="modal-body">
                <input class="form-control create-title" required type="text" placeholder="Title">
                <input class="form-control create-description" required type="text" placeholder="Description">
                <input class="form-control create-price" required type="number" placeholder="Price">
                <select class='form-control create-categories' required>
                </select>
                <span class="btn btn-primary btn-file form-control">
                  Upload an Image <input id='create-file' type="file">
                </span>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" id="create-submit" class="btn btn-success">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>

      <!-- Post Modal -->
      <div class="modal fade" id="post-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <i class="delete fa fa-trash"></i>
              <h4 class="modal-title">Post Title</h4>
            </div>
            <img class="modal-image" height="200" width="200">
            <div class="modal-body"></div>
            <div class="modal-footer">
              <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
              <a id="modal-contact" href="https://mail.google.com/mail/?view=cm&fs=1&to=someone@example.com&su=SUBJECT&body=BODY" target="_blank" class="btn btn-success">Contact</a>
            </div>
          </div>
        </div>
      </div>
        <div class="row">
          <div class="settings-panel col-md-6 col-md-offset-3 panel panel-success">
            <div class="panel-heading">
              Account Settings
            </div>
            <div class="panel-body">
              <div class="list-group">
                <div class="list-group-item">
                  <button class='btn btn-primary form-control'><i class="fa fa-lock list-group-item-heading"></i> Change Password</button>
                </div>
                <div class="list-group-item">
                  <button class='btn btn-danger form-control'><i class="fa  fa-times-circle"></i><span>Delete Account</span></button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <hr>
        <div class="footer">
            <p>&copy; Bazaar 2015</p>
        </div>
    </div>
    <!-- /container -->
