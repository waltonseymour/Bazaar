    <script src="//cdnjs.cloudflare.com/ajax/libs/underscore.js/1.5.2/underscore-min.js"></script>
    <script src="/javascripts/sweet-alert.min.js"></script>
    <script src="/javascripts/main.min.js"></script>
  </body>
</html>
