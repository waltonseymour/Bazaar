<% for (var i = 0; i < posts.length; i++) {  %>
  <div class="row post" data-id="<%= posts[i].id %>"
    <% if (posts[i].photos[0]){ %>
      data-photo="<%= posts[i].photos[0].id %>"
    <% } %>
  >
    <div class="col-sm-10">
      <h3 class="post-title truncate">
        <%= posts[i].title%>
      </h3>
      <div class="row">
        <div class="col-sm-10">
          <h5 class="post-description truncate">
            <%= posts[i].description%>
          </h5>
        </div>
      </div>
    </div>

    <div class="col-sm-2 bg-success price"><h4><%= posts[i].price %></h4></div>
  </div>
  <hr class="end-post row">
<% } %>
